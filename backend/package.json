{
  "name": "wazgo-backend",
  "version": "1.0.0",
  "description": "Backend fÃ¶r Waz Go: kontaktform, adminpanel, PostgreSQL, CSRF, mail",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "backup": "node -e \"import('./utils/backup.js').then(m => m.backupDatabase()).then(() => console.log('Backup completed')).catch(console.error)\"",
    "verify-backup": "node -e \"import('./utils/backup.js').then(m => { const files = m.getBackupFiles(); if (files.length) { const latest = files.sort().pop(); m.verifyBackup('./backups/' + latest).then(() => console.log('Verification completed')).catch(console.error); } else console.log('No backups found'); })\"",
    "cleanup-backups": "node -e \"import('./utils/backup.js').then(m => m.cleanupOldBackups()).then(() => console.log('Cleanup completed')).catch(console.error)\""
  },
  "engines": {
  "node": "22.x"
},
