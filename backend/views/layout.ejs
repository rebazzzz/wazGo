<!doctype html>
<html lang="sv">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <meta name="csrf-token" content="<%= csrfToken %>">
  <title><%= title || 'Waz Go' %></title>

  <!-- CSS - behåll dina ursprungliga CSS i /public/static -->
  <link rel="stylesheet" href="/static/index.css">
  <link rel="stylesheet" href="/static/kontakta_oss.css">
  <link rel="stylesheet" href="/static/integritetspolicy.css">
  <link rel="stylesheet" href="/static/admin.css"> <!-- admin css -->
  
  <!-- Din globala JS (defer så DOM finns) -->
  <script src="/static/index.js" defer></script>
  <script src="/static/kontakta_oss.js" defer></script>
  <script src="/static/integritetspolicy.js" defer></script>
</head>
<body>
  <header>
    <!-- enklare header, byt ut mot din HTML -->
    <nav>
      <a href="/">Hem</a>
      <a href="/kontakta_oss">Kontakt</a>
      <a href="/integritetspolicy">Integritet</a>
      <a href="/admin">Admin</a>
    </nav>
  </header>

  <main>
    <!-- flash-meddelanden -->
    <% if (success && success.length > 0) { %>
      <div class="flash flash-success"><%= success[0] %></div>
    <% } %>
    <% if (error && error.length > 0) { %>
      <div class="flash flash-error"><%= error[0] %></div>
    <% } %>

    <!-- Här renderas sidans innehåll -->
    <%- body %>
  </main>

  <footer>
    <p>© Waz Go</p>
  </footer>
</body>
</html>
