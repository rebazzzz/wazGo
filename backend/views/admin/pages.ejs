<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <meta name="csrf-token" content="<%= csrfToken %>">
  <link rel="stylesheet" href="/admin/static/admin.css">
</head>
<body>
  <nav>
    <span>Waz Go Admin</span>
    <a href="/admin/dashboard">Dashboard</a>
    <a href="/admin/contacts">Kontakter</a>
    <a href="/admin/pages">Sidor</a>
    <a href="/admin/change-password">Ändra Lösenord</a>
    <a href="/admin/logout" class="logout">Logga ut</a>
  </nav>

  <div class="container">

    <% if (flash.success && flash.success.length > 0) { %>
      <div class="flash-success"><%= flash.success[0] %></div>
    <% } %>
    <% if (flash.error && flash.error.length > 0) { %>
      <div class="flash-error"><%= flash.error[0] %></div>
    <% } %>

    <h1>Sidor</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Titel</th>
          <th>Slug</th>
          <th>Åtgärd</th>
        </tr>
      </thead>
      <tbody>
        <% pages.forEach(page => { %>
          <tr>
            <td><%= page.id %></td>
            <td><%= page.title %></td>
            <td><%= page.slug %></td>
            <td>
              <a href="/admin/edit/<%= page.id %>">Redigera</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
