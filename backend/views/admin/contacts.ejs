
<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <meta name="csrf-token" content="<%= csrfToken %>">
  <link rel="stylesheet" href="/admin/static/admin.css">
</head>
<body>
  <nav>
    <span>Waz Go Admin</span>
    <a href="/admin/dashboard">Dashboard</a>
    <a href="/admin/contacts">Kontakter</a>
    <a href="/admin/pages">Sidor</a>
    <a href="/admin/change-password">Ändra Lösenord</a>
    <a href="/admin/logout" class="logout">Logga ut</a>
  </nav>

  <div class="container">

    <% if (flash.success && flash.success.length > 0) { %>
      <div class="flash-success"><%= flash.success[0] %></div>
    <% } %>
    <% if (flash.error && flash.error.length > 0) { %>
      <div class="flash-error"><%= flash.error[0] %></div>
    <% } %>

    <h1>Kontakter</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Namn</th>
          <th>Email</th>
          <th>Företag</th>
          <th>Bransch</th>
          <th>Meddelande</th>
          <th>Skapad</th>
          <th>Åtgärd</th>
        </tr>
      </thead>
      <tbody>
        <% contacts.forEach(contact => { %>
          <tr>
            <td><%= contact.id %></td>
            <td><%= contact.name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.company || '-' %></td>
            <td><%= contact.industry || '-' %></td>
            <td><%= contact.message %></td>
            <td><%= contact.createdAt.toLocaleString() %></td>
            <td>
              <button type="button" class="delete-btn" data-id="<%= contact.id %>" data-name="<%= contact.name %>">Radera</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Modal -->
  <div id="deleteModal" class="modal">
    <div class="modal-content">
      <p id="modalText">Är du säker på att du vill radera kontakten?</p>
      <div class="modal-buttons">
        <button id="cancelBtn">Avbryt</button>
        <button id="confirmBtn">Radera</button>
      </div>
    </div>
  </div>

  <script src="/admin/static/admin.js"></script>
</body>
</html>
