<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f7f7f7;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .login-container {
      background: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 400px;
    }
    h2 { text-align: center; margin-bottom: 20px; }
    input[type="text"], input[type="email"], input[type="password"] {
      width: 100%;
      padding: 10px;
      margin: 8px 0 16px 0;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    button {
      width: 100%;
      padding: 12px;
      background: #333;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }
    button:hover { background: #555; }
    .flash-success {
      background: #e6ffed;
      color: #2b7a0b;
      padding: 10px;
      border-radius: 4px;
      margin-bottom: 10px;
      text-align: center;
    }
    .flash-error {
      background: #ffe6e6;
      color: #900;
      padding: 10px;
      border-radius: 4px;
      margin-bottom: 10px;
      text-align: center;
    }
    .modal {
      display: none;
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: rgba(0,0,0,0.5);
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }
    .modal-content {
      background: #fff;
      padding: 25px;
      border-radius: 10px;
      text-align: center;
      max-width: 400px;
      width: 90%;
      box-shadow: 0 4px 15px rgba(0,0,0,0.3);
    }
  </style>
</head>
<body>
  <div class="login-container">
    <h2>Admin Login</h2>

    <% if (flash.success && flash.success.length > 0) { %>
  <div class="flash-success"><%= flash.success[0] %></div>
<% } %>

<% if (flash.error && flash.error.length > 0) { %>
  <div class="flash-error"><%= flash.error[0] %></div>
<% } %>


    <form method="post" action="/admin/login">
      <!-- CSRF token -->
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <label for="email">E-post</label>
      <input type="email" id="email" name="email" required>

      <label for="password">Lösenord</label>
      <input type="password" id="password" name="password" required>

      <button type="submit">Logga in</button>
    </form>
  </div>

  <!-- Success Modal -->
  <div id="successModal" class="modal" style="display: none;">
    <div class="modal-content" style="text-align: center; padding: 25px;">
      <h3>Lösenord ändrat</h3>
      <p>Lösenordet ändrat framgångsrikt. Logga in igen.</p>
      <button id="closeModalBtn" style="padding: 8px 20px; background: #333; color: white; border: none; border-radius: 4px; cursor: pointer;">OK</button>
    </div>
  </div>

  <!-- 2FA Success Modal -->
  <div id="twofaModal" class="modal" style="display: none;">
    <div class="modal-content" style="text-align: center; padding: 25px;">
      <h3>2FA Uppdaterad</h3>
      <p id="twofaMessage"></p>
      <button id="closeTwofaModalBtn" style="padding: 8px 20px; background: #333; color: white; border: none; border-radius: 4px; cursor: pointer;">OK</button>
    </div>
  </div>

  <script>
    const successModal = document.getElementById('successModal');
    const closeModalBtn = document.getElementById('closeModalBtn');

    if (window.location.search.includes('passwordChanged=true')) {
      successModal.style.display = 'flex';
    }

    closeModalBtn.onclick = () => {
      successModal.style.display = 'none';
    };

    window.onclick = (e) => {
      if (e.target === successModal) {
        successModal.style.display = 'none';
      }
    };

    // 2FA Modal
    const twofaModal = document.getElementById('twofaModal');
    const closeTwofaModalBtn = document.getElementById('closeTwofaModalBtn');
    const twofaMessage = document.getElementById('twofaMessage');

    if (window.location.search.includes('2faEnabled=true')) {
      twofaMessage.textContent = '2FA aktiverat framgångsrikt. Logga in igen.';
      twofaModal.style.display = 'flex';
    } else if (window.location.search.includes('2faDisabled=true')) {
      twofaMessage.textContent = '2FA inaktiverat framgångsrikt. Logga in igen.';
      twofaModal.style.display = 'flex';
    }

    closeTwofaModalBtn.onclick = () => {
      twofaModal.style.display = 'none';
    };

    window.onclick = (e) => {
      if (e.target === twofaModal) {
        twofaModal.style.display = 'none';
      }
    };
  </script>
</body>
</html>
