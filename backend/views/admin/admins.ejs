<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Management</title>
  <link rel="stylesheet" href="/admin/admin.css" />
</head>
<body>
  <a href="/admin/dashboard" class="back-link btn btn-back">Back to Dashboard</a>

  <h1>Admin Management</h1>

  <% if (error) { %>
    <div class="flash-error"><%= error %></div>
  <% } %>
  <% if (success) { %>
    <div class="flash-success"><%= success %></div>
  <% } %>

  <script>
    // Auto-hide flash messages after 5 seconds
    setTimeout(() => {
      const errorDiv = document.querySelector('.flash-error');
      if (errorDiv) errorDiv.style.display = 'none';
      const successDiv = document.querySelector('.flash-success');
      if (successDiv) successDiv.style.display = 'none';
    }, 5000);
  </script>

  <h2>Create New Admin</h2>
  <form action="/admin/admins/create" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <label for="email">Email:</label>
    <input type="email" name="email" id="email" required />
    <label for="password">Password:</label>
    <input type="password" name="password" id="password" required />
    <label for="isMainAdmin">Main Admin:</label>
    <input type="checkbox" name="isMainAdmin" id="isMainAdmin" />
    <button type="submit">Create Admin</button>
  </form>

  <h2>Existing Admins</h2>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Main Admin</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% admins.forEach(admin => { %>
        <tr>
          <td><%= admin.email %></td>
          <td><%= admin.role %></td>
          <td><%= admin.isMainAdmin ? 'Yes' : 'No' %></td>
          <td>
            <% if (admin.id !== currentUserId && !admin.isMainAdmin) { %>
              <button onclick="showDeleteModal(<%= admin.id %>)">Delete</button>
            <% } else { %>
              <em>Not allowed</em>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Delete Admin Confirmation Modal -->
  <div id="deleteModal" class="modal">
    <div class="modal-content">
      <h3>Confirm Admin Deletion</h3>
      <p>Are you sure you want to delete this admin? This action cannot be undone.</p>
      <div class="modal-buttons">
        <button id="confirmDelete" class="btn btn-danger">Delete</button>
        <button id="cancelDelete" class="btn">Cancel</button>
      </div>
    </div>
  </div>

  <form id="deleteForm" action="/admin/admins/delete" method="POST" style="display: none;">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <input type="hidden" name="id" id="deleteId" />
  </form>

  <script>
    let deleteModal = document.getElementById('deleteModal');
    let confirmDelete = document.getElementById('confirmDelete');
    let cancelDelete = document.getElementById('cancelDelete');
    let deleteForm = document.getElementById('deleteForm');
    let deleteId = document.getElementById('deleteId');

    function showDeleteModal(id) {
      deleteId.value = id;
      deleteModal.style.display = 'flex';
    }

    confirmDelete.onclick = () => {
      deleteForm.submit();
    };

    cancelDelete.onclick = () => {
      deleteModal.style.display = 'none';
    };

    window.onclick = (e) => {
      if (e.target === deleteModal) {
        deleteModal.style.display = 'none';
      }
    };
  </script>
</body>
</html>
